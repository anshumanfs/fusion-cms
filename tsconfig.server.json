{
  "compilerOptions": {
    "outDir": "./.build",
    "typeRoots": ["@types/*"],
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "server/**/*.ts",
    "server/**/*.tsx",
    "server/**/*.js",
    "server/**/*.jsx",
    "server/**/*.json",
    "@types/**/*.ts"
  ],
  "exclude": [".build", "node_modules", ".next", "**/*.test.*", "**/__mocks__/*", "**/__tests__/*", "data"]
}
