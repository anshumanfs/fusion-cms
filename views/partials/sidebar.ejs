<!-- Sidebar component -->
<div class="pb-12">
  <div class="space-y-4 py-4">
    <a href="/dashboard" class="flex items-center px-3 py-2 text-primary no-underline">
      <img src="/logo/light/logo.svg" alt="Fusion CMS Logo" width="45" height="45" class="hidden dark:block" />
      <img src="/logo/dark/logo.svg" alt="Fusion CMS Logo" width="45" height="45" class="block dark:hidden" />
      <span class="text-lg font-semibold ml-2">Fusion CMS</span>
    </a>
    <div class="px-3 py-2">
      <div class="space-y-1">
        <a href="/dashboard/databases" class="flex w-full items-center rounded-md px-3 py-2 text-sm font-medium <%= activePage === 'databases' ? 'bg-muted text-foreground' : 'text-muted-foreground hover:bg-transparent hover:underline' %>">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="mr-2 h-4 w-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 6.375c0 2.278-3.694 4.125-8.25 4.125S3.75 8.653 3.75 6.375m16.5 0c0-2.278-3.694-4.125-8.25-4.125S3.75 4.097 3.75 6.375m16.5 0v11.25c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125V6.375m16.5 0v3.75m-16.5-3.75v3.75m16.5 0v3.75C20.25 16.153 16.556 18 12 18s-8.25-1.847-8.25-4.125v-3.75m16.5 0v3.75" />
          </svg>
          Databases
        </a>
        
        <a href="/dashboard/schemas" class="flex w-full items-center rounded-md px-3 py-2 text-sm font-medium <%= activePage === 'schemas' ? 'bg-muted text-foreground' : 'text-muted-foreground hover:bg-transparent hover:underline' %>">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="mr-2 h-4 w-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
          </svg>
          Schemas
        </a>
        
        <a href="/dashboard/users" class="flex w-full items-center rounded-md px-3 py-2 text-sm font-medium <%= activePage === 'users' ? 'bg-muted text-foreground' : 'text-muted-foreground hover:bg-transparent hover:underline' %>">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2 h-4 w-4">
            <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
          Users
        </a>
        
        <a href="/dashboard/accesses" class="flex w-full items-center rounded-md px-3 py-2 text-sm font-medium <%= activePage === 'accesses' ? 'bg-muted text-foreground' : 'text-muted-foreground hover:bg-transparent hover:underline' %>">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2 h-4 w-4">
            <rect width="18" height="11" x="3" y="11" rx="2" ry="2"></rect>
            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
          </svg>
          Accesses
        </a>
      </div>
    </div>
    
    <!-- Settings Section -->
    <div class="px-3 py-2">
      <h2 class="mb-2 px-4 text-lg font-semibold tracking-tight">Settings</h2>
      <div class="space-y-1">
        <!-- Database Settings -->
        <a href="#" class="flex w-full items-center rounded-md px-3 py-2 text-sm font-medium text-muted-foreground hover:bg-transparent hover:underline" data-modal-toggle="add-database-modal">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="mr-2 w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Add Database
        </a>
        <a href="#" class="flex w-full items-center rounded-md px-3 py-2 text-sm font-medium text-muted-foreground hover:bg-transparent hover:underline">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="mr-2 w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 7.5L7.5 3m0 0L12 7.5M7.5 3v13.5m13.5 0L16.5 21m0 0L12 16.5m4.5 4.5V7.5" />
          </svg>
          Update Database
        </a>
        <a href="#" class="flex w-full items-center rounded-md px-3 py-2 text-sm font-medium text-muted-foreground hover:bg-transparent hover:underline">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="mr-2 w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Remove Database
        </a>
      </div>
    </div>
    
    <!-- Schema Settings -->
    <div class="px-3 py-2">
      <h2 class="mb-2 px-4 text-lg font-semibold tracking-tight">Schemas</h2>
      <div class="space-y-1">
        <a href="#" class="flex w-full items-center rounded-md px-3 py-2 text-sm font-medium text-muted-foreground hover:bg-transparent hover:underline" data-modal-toggle="add-schema-modal">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="mr-2 w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Add Schema
        </a>
        <a href="#" class="flex w-full items-center rounded-md px-3 py-2 text-sm font-medium text-muted-foreground hover:bg-transparent hover:underline">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="mr-2 w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" />
          </svg>
          Update Schema
        </a>
        <a href="#" class="flex w-full items-center rounded-md px-3 py-2 text-sm font-medium text-muted-foreground hover:bg-transparent hover:underline">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="mr-2 w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Remove Schema
        </a>
      </div>
    </div>
    
    <!-- Documentation Section -->
    <div class="px-3 py-2">
      <h2 class="mb-2 px-4 text-lg font-semibold tracking-tight">Documentation</h2>
      <div class="space-y-1">
        <a href="/docs" class="flex w-full items-center rounded-md px-3 py-2 text-sm font-medium text-muted-foreground hover:bg-transparent hover:underline">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="mr-2 w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25" />
          </svg>
          API Documentation
        </a>
      </div>
    </div>
  </div>
</div>

<!-- Modal templates for database and schema operations -->
<%- include('./modals/add-database-modal') %>
<%- include('./modals/add-schema-modal') %>
